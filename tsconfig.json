{
  "extends": "@myku0814/public-config-myku/tsconfig/recommend",
  "include": [
    "src/**/*.js",
    "src/**/*.cjs",
    "src/**/*.mjs",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.cts",
    "src/**/*.mts",
    "src/**/*.tsx",
    "src/**/*.json",
    "src/**/*.vue",
    "bin/**/*.js",
    "bin/**/*.cjs",
    "bin/**/*.mjs",
    "bin/**/*.jsx",
    "bin/**/*.ts",
    "bin/**/*.cts",
    "bin/**/*.mts",
    "bin/**/*.tsx",
    "bin/**/*.json",
    "bin/**/*.vue",
    "index.js",
    "index.ts",
    ".eslintrc.js",
    ".eslintrc.cjs",
    ".prettierrc.js",
    ".prettierrc.cjs",
    "tailwind.config.*",
    "postcss.config.*",
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
  ],
  "exclude": ["./node_modules", "./src/dev/**", "./src/**/*.bak.*", "./src/**/*.cp.*", "src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./dist/.myku/tsconfig.tsbuildinfo",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "types": ["node"],
    "rootDir": "./",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
    },
    "noUnusedLocals": false,
    "noUnusedParameters": false,
  }
}
